<?xml version="1.0" encoding="ISO-8859-1"?>
<permissions>
    <targets>
        <group>
            <!--NAME - Pipe delimited starting with the parent down to the child-->  
            <name>Site Admin</name>
            <description>Site wide admin users</description>
        </group>
        <group>
            <name>Main Group|Sub Group 1|Sub Group 2</name>
            <description>Test group</description>
        </group>
        <acl>
            <name>ACL test</name>
            <description>test if acls work</description>
            <users>
                <group>Group one</group>
                <group>Main Group|Sub Group 1|Sub Group 2</group>
            </users>
        </acl>
        <acl>
            <name>ACL two</name>
            <description>Double check</description>
        </acl>
    </targets>
    <conditions>
        <condition>
            <name>islecturer</name>
            <type>ismember</type>
            <!--TARGET(group) - Pipe delimited starting with the parent down to the child-->  
            <target>Group one</target>
        </condition>
        <condition>
            <name>ingroup</name>
            <type>ismember</type>
            <target>Main Group|Sub Group 1|Sub Group 2</target>
        </condition>
        <condition>
            <name>isaclmember</name>
            <type>haspermission</type>
            <target>ACL test</target>
        </condition>
    </conditions>
    <actions>
        <name>add</name>
        <name>edit</name>
        <name>save</name>
        <name>update</name>
        <name>generate</name>
        <name>delete</name>
    </actions>
    <rules>
        <rule>
            <name>sitepermissions_rule_1</name>
            <condition>isadmin</condition>
            <action>add</action>
            <action>edit</action>
            <action>save</action>
            <action>update</action>
            <action>generate</action>
            <action>delete</action>
        </rule>
        <rule>
            <name>sitepermissions_rule_2</name>
            <condition>ingroup</condition>
            <action>add</action>
            <action>edit</action>
        </rule>
    </rules>
</permissions>